

<header class="indexhead">
      <div class="container-fluid" >
        <div class="intro-text">
          
          <div class="intro-heading text-center" >Gary Blog</div>

        </div>
      </div>
   
</header>

<% if user_signed_in? %>
<div>
<%= link_to "發表新文章", new_post_path,  class: 'btn btn-info', :style => 'margin: 10px; text-decoration:none;' %>
</div>
<% end %>

<div class="col-md-8  col-md-offset-2" style="margin-bottom: 150px;">
 <% @posts.each do |post| %>
		<h2 class="post-title" ><%= link_to post.title, post , :style =>'text-decoration:none;'%></h2>
    <h5><span class="glyphicon glyphicon-time">文章於<%= time_ago_in_words(post.created_at)%>
    </span>前發佈</h5>
		<h3 class="post-subtitle"><%= post.content.html_safe %></h3>
        <% if user_signed_in? %>
		<p><%= link_to "edit", edit_post_path(post),  class: 'btn btn-warning', :style => 'text-decoration:none;'  %>
		 | <%= link_to("Delete", post,  method: :delete, data: { confirm: "Are you sure?" } ,  class: 'btn btn-danger', :style => 'text-decoration:none;' )%></p>
		 
		<% end %>
        <% end %>


</div>